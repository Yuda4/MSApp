<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsFragment"
    android:background="@android:color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/genre_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/released_year_detail_txt"
            app:layout_constraintTop_toBottomOf="@+id/released_year_detail_txt" />

        <ImageView
            android:id="@+id/image_detail_view"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_outline_movie_details"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/title_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/image_detail_view"
            app:layout_constraintTop_toBottomOf="@+id/image_detail_view" />

        <TextView
            android:id="@+id/released_year_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realesed Year"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_detail_txt"
            app:layout_constraintTop_toBottomOf="@+id/title_detail_txt" />

        <TextView
            android:id="@+id/rating_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Rating"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/genre_detail_txt"
            app:layout_constraintTop_toTopOf="@+id/genre_detail_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>